<p style="color: green"><%= notice %></p>

<h1>Transfers To</h1>

<%= form_tag(transfers_path) do |form| %>
  <select class="form-select" aria-label="Default select example" name="to_wallet_id">
    <% @wallets.each do |wallet|%>
    <option value="<%= wallet.id %>"><%= wallet.owner_type %>-<%= wallet.owner.name %></option>
    <% end %>
  </select>
  <input type="number" name="amount" class="form-control"  placeholder="100">
  <button type="submit" class="btn btn-primary">Transfer</button>
<% end %>